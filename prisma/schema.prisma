generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Category{
  categoryId String @id @default(uuid())
  categoryName String
  description String
  status CategoryStatus @default(active)
  userId String
  icon String
  priority PriorityStatus @default(normal)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  shoppingItems ShoppingItem[]
}

model ShoppingItem{
  itemId String @id @default(uuid())
  itemName String
  description String
  quantity Int
  unit UnitStatus @default(kg)
  status ItemStatus @default(active)
  categoryId String
  priority PriorityStatus @default(normal)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt 
  category Category @relation(fields: [categoryId], references: [categoryId])
}

enum CategoryStatus{
  active
  completed
}

enum ItemStatus{
  active
  archived
}

enum PriorityStatus{
  normal
  low
  medium
  high
}

enum UnitStatus{
  kg
  piece
  pack
  dozen
  box
  gram
  litre
  milliLitre
  bottle
  can
  cup
  other
}